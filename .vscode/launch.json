    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run Sagiri",
            "envFile": "${workspaceFolder}/.env",
            "program": "${workspaceRoot}/build/index.js",
            "cwd": "${workspaceRoot}",
			"outFiles": [ "${workspaceRoot}/build/**/*.js" ],
            "sourceMaps": true,
            "outputCapture": "std",
            "preLaunchTask": "npm: build"
        }
    ]
}